{
	"expo": {
		"name": "MyFirstApp",
		"slug": "MyFirstApp",
		"version": "1.0.0",
		"platforms": ["ios", "android", "web"],
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "myfirstapp",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"extra": {
			"socketUrl": "process.env.EXPO_PUBLIC_SOCKET_URL || 'http://192.168.1.100:3001'"
		},
		"ios": {
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"edgeToEdgeEnabled": true
		},
		"web": {
			"bundler": "metro",

			"favicon": "./assets/images/favicon.png"
		},
		"assetBundlePatterns": ["**/*"],
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/splash-icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#ffffff"
				}
			],
			"expo-secure-store",
			"expo-sqlite"
		],
		"experiments": {
			"typedRoutes": true
		}
	}
}
